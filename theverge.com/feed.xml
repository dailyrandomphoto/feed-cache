    &lt;figure&gt;
      &lt;img alt="" src="https://cdn.vox-cdn.com/thumbor/JafLuy1R8vSvwdh5ONVfwJc6h8k=/142x0:1234x728/1310x873/cdn.vox-cdn.com/uploads/chorus_image/image/69754565/bbe15939_a7a9_41cb_9010_a9f8e0a30adf.0.jpeg" /&gt;
