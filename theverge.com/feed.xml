    &lt;figure&gt;
      &lt;img alt="" src="https://cdn.vox-cdn.com/thumbor/g0LUgRKwKZ0R2xp_Ta2_R1XRQFc=/0x0:2040x1360/1310x873/cdn.vox-cdn.com/uploads/chorus_image/image/69755322/akrales_170313_1481_A_0019.0.jpg" /&gt;
