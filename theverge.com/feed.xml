    &lt;figure&gt;
      &lt;img alt="" src="https://cdn.vox-cdn.com/thumbor/U_8uTW07U037YOqK8n0_vtmKgHU=/0x0:3000x2000/1310x873/cdn.vox-cdn.com/uploads/chorus_image/image/69054896/acastro_190920_1777_amazon_0001.0.0.png" /&gt;
