    &lt;figure&gt;
      &lt;img alt="" src="https://cdn.vox-cdn.com/thumbor/lNu2ZrP64PQpgNVvTHWUGfN6kUc=/0x0:2000x1333/1310x873/cdn.vox-cdn.com/uploads/chorus_image/image/70073459/Most_Impactful_Lede.0.gif" /&gt;
